            }
        $("button").click(function () {
            var msg = $("#m").val();
            console.log("Test : " + msg);
            $("#messages").animate({scrollTop: $("#messages")[0].scrollHeight}, 100);
        });
    // script socket.io
    var socket = io();
    var userSent =  $('#user_id').val();

    $('#frmMsg').submit(function () {
    var userRe = $('#userRe').val();
    var msg = $('#m').val();
        socket.emit('chat message',userSent,msg,userRe);
        socket.emit("typing","กำลังพิมพ์......","st1");
        $('#m').val('');
        return false;
    });
    socket.on('chat message', function (msg, user_id, userRecei) {
        if (user_id == '<%= user._id %>') {
            // user sent
            $('#messages').append($('<p class="w3-right-align"></p>').text(msg));
            $("#messages").animate({scrollTop: $("#messages")[0].scrollHeight}, 100);
        } else{
            // user reply
            $('#messages').append($('<div class="dv-msg-reply"><p align="left" class="msg-reply"></p></div><br>').text(msg));
            $("#messages").animate({scrollTop: $("#messages")[0].scrollHeight}, 100);
        }
    });
    // End script socket.io
        // dataTable
    $(document).ready(function () {
        $('#tableFile').dataTable();
    });
        // End dataTable
    socket.emit('userID',$('#user_id').val());

    function getMsg(userRe){
        var cnt = 0;
        socket.emit('get message',userSent,userRe);
        $("#messages").empty();

        socket.on('msg',function(items){
            $("#messages").empty();
                for (var i = items.length - 1; i >= 0; i--) {
                    console.log("get msg = "+items[i].message);
                    if(items[i].user_sent == userSent){
                        $('#messages').append($('<p align="right" class="msg-sn"></p><br>').text(items[i].message))
                        $("#messages").animate({scrollTop: $("#messages")[0].scrollHeight}, 100);
